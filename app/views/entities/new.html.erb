<%= render "shared/nav", {text:"New Transaction", path: group_entities_path} %>


<div class="container mt-3">
  <%= form_with scope: :entity, url: group_entities_path(@categorie), method: :post do |f| %>
    <div class="form-group mb-3">
      <%= f.text_field :name,  class:"form-control", Placeholder:"Name"%>
    </div>
    <div class="form-group mb-3">
      <%= f.number_field :amount, class:"form-control", placeholder:"Amount" %>
    </div>
    <%= f.submit "Add Transaction",class:"btn btn-primary btn-sm" %>
  </div>
<% end %>

