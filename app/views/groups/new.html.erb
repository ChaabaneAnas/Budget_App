 <div class="container">

 <h2 class= "mb-3"> Add a categorie </h2>
  <%= form_with model: @categorie do |f|%>
    <div class="mb-3">
      <%= f.label :name, "Category", class:"label-control"%>
      <%= f.text_field :name, autofocus: true, autocomplete: ":name", class:"form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :icon, "icon URL"%>
      <%= f.text_field :icon, autofocus: true, autocomplete: ":icon", class:"form-control"%>
    </div>

    <div class="action">
      <%= f.submit "add ", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
